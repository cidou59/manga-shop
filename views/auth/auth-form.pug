block content
  div(class="auth-form-container")
    h1 Connexion
     link(rel="stylesheet" href="/css/main.css")
    form(class="card" method="post" action="/auth/signin")
      div(class="card-body")
        div(class="mb-3")
          label Email
          input(class="form-control" type="email" name="email" placeholder="Entrez votre email")
        div(class="mb-3")
          label Password
          input(class="form-control" type="password" name="password" placeholder="Entrez votre mot de passe")
        if errors
          ul(class="my-2")
            each error in errors
              li(class="text-danger")= error
        div(class="w-100")
          input(type="submit" value="Connexion" class="btn btn-primary w-100")
